#include <stdio.h>
#include <string.h>

struct {
    char name[20];
} dir[10];

int main() {
    int n=0, ch, i;
    char f[20];
    while(1) {
        printf("\n1.Create File\n2.Delete File\n3.List Files\n4.Exit\n");
        scanf("%d", &ch);
        if(ch==1) {
            printf("Enter filename: ");
            scanf("%s", dir[n].name);
            n++;
        } else if(ch==2) {
            printf("Enter filename to delete: ");
            scanf("%s", f);
            for(i=0;i<n;i++) {
                if(strcmp(dir[i].name,f)==0) {
                    strcpy(dir[i].name, dir[n-1].name);
                    n--;
                    break;
                }
            }
        } else if(ch==3) {
            printf("Files:\n");
            for(i=0;i<n;i++) printf("%s\n", dir[i].name);
        } else break;
    }
    return 0;
}
