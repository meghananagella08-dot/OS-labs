#include <stdio.h>

int main() {
    int frames[10], ref[20], n, nf, i, j, k, faults=0, count[10], recent=0, min;
    printf("Enter number of frames: ");
    scanf("%d", &nf);
    printf("Enter length of reference string: ");
    scanf("%d", &n);
    printf("Enter reference string: ");
    for(i=0;i<n;i++) scanf("%d",&ref[i]);
    for(i=0;i<nf;i++) { frames[i]=-1; count[i]=0; }

    for(i=0;i<n;i++) {
        int flag=0;
        for(j=0;j<nf;j++) {
            if(frames[j]==ref[i]) { flag=1; count[j]=++recent; break; }
        }
        if(flag==0) {
            int pos=0, min=count[0];
            for(j=1;j<nf;j++) if(count[j]<min) { min=count[j]; pos=j; }
            frames[pos]=ref[i]; count[pos]=++recent;
            faults++;
        }
        printf("\nFrames: ");
        for(j=0;j<nf;j++) printf("%d ", frames[j]);
    }
    printf("\nTotal Page Faults: %d\n", faults);
    return 0;
}
