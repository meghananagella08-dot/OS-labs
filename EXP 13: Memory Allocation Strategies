#include <stdio.h>

int main() {
    int blockSize[10], processSize[10], i, j, nb, np, alloc[10];
    printf("Enter number of blocks: ");
    scanf("%d", &nb);
    printf("Enter block sizes:\n");
    for(i=0;i<nb;i++) scanf("%d",&blockSize[i]);
    printf("Enter number of processes: ");
    scanf("%d", &np);
    printf("Enter process sizes:\n");
    for(i=0;i<np;i++) scanf("%d",&processSize[i]);

    for(i=0;i<np;i++) alloc[i] = -1;

    for(i=0;i<np;i++) {
        for(j=0;j<nb;j++) {
            if(blockSize[j] >= processSize[i]) {
                alloc[i] = j;
                blockSize[j] -= processSize[i];
                break;
            }
        }
    }

    printf("\nProcess\tSize\tBlock\n");
    for(i=0;i<np;i++) {
        printf("P%d\t%d\t", i+1, processSize[i]);
        if(alloc[i] != -1) printf("%d\n", alloc[i]+1);
        else printf("Not Allocated\n");
    }
    return 0;
}
