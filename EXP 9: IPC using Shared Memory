#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>
#include <unistd.h>

int main() {
    key_t key = 1234;
    int shmid = shmget(key, 1024, 0666|IPC_CREAT);
    char *str = (char*) shmat(shmid, NULL, 0);

    if (fork() == 0) {
        sleep(1);
        printf("Child read: %s\n", str);
    } else {
        strcpy(str, "Hello from Parent");
        wait(NULL);
        shmdt(str);
        shmctl(shmid, IPC_RMID, NULL);
    }
    return 0;
}
