#include <stdio.h>
#include <dirent.h>

int main() {
    DIR *d;
    struct dirent *dir;
    d = opendir("."); // current directory

    if(d) {
        printf("Files in current directory:\n");
        while((dir = readdir(d)) != NULL)
            printf("%s\n", dir->d_name);
        closedir(d);
    } else {
        printf("Unable to open directory.\n");
    }

    return 0;
}
