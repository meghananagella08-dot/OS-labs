#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[100] = "Hello, Meghana!";
    char readBuffer[100];

    // Create or open a file
    fd = open("test.txt", O_CREAT | O_RDWR, 0777);
    if(fd < 0) {
        printf("File not created.\n");
        return 1;
    }

    // Write data into the file
    write(fd, buffer, sizeof(buffer));

    // Move file pointer to beginning
    lseek(fd, 0, SEEK_SET);

    // Read data from file
    read(fd, readBuffer, sizeof(readBuffer));
    printf("Data read from file: %s\n", readBuffer);

    close(fd);
    return 0;
}
